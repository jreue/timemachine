{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PlatformIO Build",
      "type": "shell",
      "command": "pio run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$platformio"]
    },
    {
      "label": "PlatformIO Upload",
      "type": "shell",
      "command": "pio run --target upload",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$platformio"]
    },
    {
      "label": "PlatformIO Clean",
      "type": "shell",
      "command": "pio run --target clean",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "PlatformIO Serial Monitor",
      "type": "shell",
      "command": "pio device monitor",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true
    },
    {
      "label": "PlatformIO Build & Upload",
      "dependsOrder": "sequence",
      "dependsOn": ["PlatformIO Build", "PlatformIO Upload"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
